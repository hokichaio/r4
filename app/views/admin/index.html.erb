<legend>管理者メニュー</legend>

<%= link_to "画像アップロード", {:controller => :upload, :action => :new}, :class => "btn btn-primary" %>
<%= link_to "投稿", {:controller => :posts, :action => :new}, :class => "btn btn-primary" %>
<br/><br/>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Id</th><th>タイトル</th><th>アクセス</th><th>レコメンド</th><th>操作</th>
		</tr>
	</thead>
	<tbody>
		<%@posts.each do |post|%>
			<tr>
				<td><%=post.id%></td>
				<td><%=post.title%></td>
				<td><%=post.access%></td>
				<td><%=post.recommend%></td>
				<td>
					<%= link_to t('.edit', :default => t("helpers.links.edit")),
		              edit_post_path(post),
		              :method => 'get',
		              :class => 'btn btn-primary' %>
					<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
		              post_path(post),
		              :method => 'delete',
		              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
		              :class => 'btn btn-danger' %>
              </td>
			</tr>
		<%end%>
	</tbody>
</table>


<br/><br/><br/>
